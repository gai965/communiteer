<% provide(:title, 'DM') %>
<%= render 'shared/header' %>
<%= render partial:'shared/second_header', locals:{ title: "#{@partner_name}さんとのDM" } %> 
 
<div class='h-screen bg-gray-200 font-sans'>
  <div class='grid place-items-center pt-14'>
    <div id='chat-area' class='h-148 sm:h-176 w-80 xs:w-112 sm:w-148 md:w-176 lg:w-224 bg-white rounded shadow-lg p-4 overflow-auto'>
      <%= render partial:'chat_area', collection: @all_chats, as: 'all_chat' %>
    </div>
    <%= form_with do |f| %>
      <div class='h-10 w-80 xs:w-112 sm:w-148 md:w-176 lg:w-224 flex my-7'>
        <%= f.text_field :message, placeholder: 'メッセージを入力して下さい',id: 'message', data: {room: "#{@room.id}", speakerid:"#{@account.id}", speakertype:"#{@account.type}"}, class: 'w-full focus:shadow-lg px-3 focus:outline-none inline-block'%>
      </div>
    <% end %>
  </div>
</div>
<%= render 'shared/footer' %>