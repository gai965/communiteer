<% provide(:title, 'ボランティア募集一覧') %>
<%= render 'shared/header' %> 
<%= render partial:'shared/second_header', locals:{ title: 'ボランティア募集一覧' } %> 

<div class='w-full bg-gray-200 font-sans'>
  <div class='grid place-items-center py-14'>
    <div>
      <div class='border-b-2 border-gray-600 mb-8 pb-2'>
        <p class='text-2xl font-bold'>総数：<%= @all_volunteer_number %>件</p>
      </div>
      <div class='grid justify-items-center grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-y-10 gap-x-4 md:gap-x-10'>
        <%= render partial:'post_volunteer', collection: @per_volunteer , as: 'volunteer' %> 
      </div>
      <%= paginate @per_volunteer %>  
    </div>
  </div>
</div>
