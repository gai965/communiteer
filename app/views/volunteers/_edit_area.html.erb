
<% if volunteer.contributor_verification(volunteer, @account) %>
  <div class='h-8 lg:h-9 w-20 bg-white flex items-center justify-around'>
    <% if volunteer.deadline_flag == false %>
      <%= link_to( edit_volunteer_path(volunteer.id), class:'h-8 w-8 lg:w-8 bg-blue-700 flex justify-center items-center hover:opacity-60 rounded') do %>
        <%= image_tag 'edit_icon.png', class:'h-3 w-3' %>
      <% end %>
    <% end %>
    <%= link_to( volunteer_path(volunteer.id), method: :delete, class:'h-8 w-8 lg:w-8 bg-red-700 flex justify-center items-center hover:opacity-60 rounded', data: { confirm: '本当に削除しますか？' }) do %>
      <%= image_tag 'delete_icon.png', class:'h-3 w-3' %>
    <% end %>
  </div>
<% end %>