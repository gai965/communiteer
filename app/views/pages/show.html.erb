<% provide(:title, "#{@account_page_info.name}さんのページ") %>
<%= render 'shared/header' %>

<div class='h-screen w-full bg-gray-200 font-sans'>
  <div class='grid place-items-center pt-14'>
    <div class='w-full flex flex-col md:flex-row justify-center px-2'>
      <div class='h-80 w-full md:w-80 bg-white hover:shadow-md flex flex-col p-6 mb-4 md:mr-2'>
        <div class='h-2/5 mb-6'>
          <img src= <%=@icon_image_path%> class='h-2/3 mx-auto mb-2' >
          <p class='text-2xl text-gray-500 font-bold text-center'><%= @account_page_info.name %></p>
        </div>
        <div class='h-2/5 border-t-2 grid grid-cols-3 place-content-start'>
          <div class='mt-3'>
            <p class='text-gray-500 text-center'><%= @all_post_number %></p>
            <p class='text-gray-500 text-center'>投稿</span>
          </div>
          <div class='mt-3'>
            <p class='text-gray-500 text-center'><%= @all_join_number %></p>
            <p class='text-gray-500 text-center'>参加</span>
          </div>
          <div class='mt-3'>
            <p class='text-gray-500 text-center'><%= @all_cheer_number %></p>
            <p class='text-gray-500 text-center'>応援</span>
          </div>
        </div>
        <div class='h-1/5'>
          <% if sameperson_confirmation.present? %>
            <%= button_to 'プロフィールを編集する', @edit_path, method: :get, class:'profile_edit_btn' %>
          <% end %>
        </div>
      </div>
      <div class='h-192 w-full lg:w-176 bg-white flex-1 lg:flex-none hover:shadow-md p-6 md:ml-2'>
        <ul class='cursor-pointer flex pb-4'>
          <li class='tab now_active hover:text-black'>投稿</li>
          <li class='tab hover:text-black'>参加</li>
          <li class='tab hover:text-black'>応援</li>
        </ul>
        <ul class='border-b cursor-pointer flex justify-start content-center'>
          <li class='child_tab child_now_active hover:bg-gray-200'>すべて</li>
          <li class='child_tab hover:bg-gray-200'>ボランティア</li>
          <li class='child_tab hover:bg-gray-200'>活動場所</li>
          <li class='child_tab hover:bg-gray-200'>イベント</li>
        </ul>
      </div>
    </div>
  </div>
</div>