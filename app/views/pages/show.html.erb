<% provide(:title, "#{@account_page_info.name}さんのページ") %>
<%= render 'shared/header' %>
<%= render partial:'shared/second_header', locals:{ title: "#{@account_page_info.name}さんのページ" } %> 

<div class='w-full bg-gray-200 font-sans'>
  <div class='grid place-items-center py-14'>
    <div class='w-full flex flex-col md:flex-row justify-center px-2'>
      <div class='h-80 w-full md:w-80 bg-white hover:shadow-md flex flex-col p-6 mb-4 md:mr-2'>
        <div class='h-2/5 mb-6'>
          <%= image_tag @account_icon_image, class:'h-2/3 mx-auto mb-2' %>
          <p class='text-2xl text-gray-500 font-bold text-center truncate'><%= @account_page_info.name %></p>
        </div>
        <div class='h-2/5 border-t-2 grid grid-cols-3 place-content-start'>
          <div class='page_item_area group'>
            <span class='page_item group-hover:border-b'><%= @all_post_number %></span>
            <span class='page_item group-hover:border-b'>投稿</span>
          </div>
          <div class='page_item_area group'>
            <span class='page_item group-hover:border-b'><%= @all_join_number %></span>
            <span class='page_item group-hover:border-b'>応募</span>
          </div>
          <div class='page_item_area group'>
            <span class='page_item group-hover:border-b'><%= @all_cheer_number %></span>
            <span class='page_item group-hover:border-b'>応援</span>
          </div>
        </div>
        <div class='h-1/5'>
          <% if sameperson_confirmation == 0 %>
            <%= button_to 'プロフィールを編集する', @edit_path, method: :get, class:'btn profile_edit' %>
          <% elsif sameperson_confirmation == 1 %> 
            <%= button_to 'ダイレクトメッセージを送る', rooms_path(partner_id:@account_page_info.id,partner_type: @account_page_info.type),method: :post, class:'btn direct_message' %> 
          <% end %>
        </div>
      </div>
      <div class='h-screen w-full lg:w-176 bg-white flex-1 lg:flex-none hover:shadow-md p-6 md:ml-2'>
        <ul class='cursor-pointer flex pb-5'>
          <li id='profile-post' class='tab now_active'>投稿</li>
          <li id='profile-join' class='tab'>応募</li>
          <li id='profile-cheer' class='tab'>応援</li>
        </ul>
        <ul class='border-b cursor-pointer flex justify-start content-center mb-6'>
          <li id='profile-child-all' class='child_tab child_now_active'>すべて</li>
          <li id='profile-child-volunteer' class='child_tab'>ボランティア</li>
          <li id='profile-child-place' class='child_tab'>活動場所</li>
          <li id='profile-child-event' class='child_tab'>イベント</li>
        </ul>
        <%= render partial: 'profile_item_area' %> 
      </div>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>