
<% provide(:title, "#{@volunteer.title}への応募者一覧") %>
<%= render 'shared/header' %> 
<%= render partial:'shared/second_header', locals:{ title: "#{@volunteer.title}への応募者一覧" } %> 

<div class='h-screen w-full bg-gray-200 font-sans'>
  <div class='grid place-items-center pt-14'>
    <div>
      <div class='border-b-2 border-gray-600 mb-8 pb-2'>
        <span class='text-2xl font-bold mr-4'>応募件数：<%= @all_join_volunteer_number %>件</span>
        <span class='text-2xl font-bold'>参加人数：<%= @volunteer.participant_number %>人</span>
      </div>
      <div class='grid justify-items-center grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-y-10 gap-x-4 md:gap-x-10'>
        <%= render partial:'join_info', collection: @per_join_volunteer, as: 'join_info', locals: { volunteer: @volunteer } %> 
      </div>
      <%= paginate @per_join_volunteer %>
    </div>
  </div>
</div>