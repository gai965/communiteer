

<div class='h-48 w-80 xs:w-96 sm:w-128 md:w-80 lg:w-96 bg-white rounded-md hover:shadow-md p-6'>
  <%= link_to volunteer_accept_path(join_info.volunteer_id, join_info.joinable_id, type: join_info.joinable_type) do %>
    <div class='flex items-center'>
      <img src= <%= join_info.joinable.image_icon_path%> class='h-8 w-8 mr-1' >
      <span class='text-xl font-bold truncate mr-1'><%= join_info.joinable.name%>さん</span>
      <% if join_info.accept_flag == true %> 
        <span class='accepted_icon'>承諾済</span>
      <% elsif join_info.accept_flag == false %> 
        <span class='noaccepted_icon'>未承諾</span>
      <% end %>
    </div>
    <div class='py-3 px-4 flex flex-col'>
      <span class='text-xl truncate'>名前：<%= join_info.name%></span>
      <span class='text-xl truncate'>電話番号：<%= join_info.phone_number%></span>
      <span class='text-xl truncate'>参加人数：<%= join_info.number%></span>
      <span class='text-xl truncate'>問い合わせ：<%= join_info.inquiry%></span>
    </div>
  <% end %>
</div>