
<div class='h-screen w-full bg-gray-100 flex flex-col font-sans'>
  <div class='grid place-items-center mx-auto my-auto'>
    <div class='w-80 sm:w-160 md:w-192 p-4 md:p-8 bg-white rounded-lg shadow-md'>

      <%= link_to(volunteer_path(@volunteer.id), class:'grid justify-items-end place-items-center') do %>
        <img src='/assets/close_icon.png', class='h-9 w-9 rounded-full hover:bg-gray-200 py-2 px-2'>
      <% end %>

      <h2 class='text-2xl md:text-3xl font-bold text-center text-gray-800'>ボランティア参加</h2>
      <%= form_with model:  @join_volunteer, url: volunteer_submissions_path(@volunteer.id), class: 'mt-2 sm:mt-10', local: true do |f| %>
        <label class='label_name'>名前</label>
        <span class='mandatory_display'>必須</span>
        <div class='flex mb-1 sm:mb-4'>
          <img src='/assets/name_icon.png' class='h-5 w-5 opacity-70 my-auto mr-2'>
          <% if @group_name.present? %>
            <%= f.text_field :name, class:'reg_info_field' %>
          <% else %>
            <%= f.text_field :name, class:'reg_info_field', placeholder:'伝達 太郎' %>
          <% end %>
        </div>
        <label class='label_name'>電話番号</label>
        <span class='any_display'>任意</span>
        <div class='flex mb-1 sm:mb-4'>
          <img src='/assets/mobilephone_icon.png' class='h-5 w-5 opacity-70 my-auto mr-2'>
          <% if @group_name.present? %>
            <%= f.text_field :phone_number, class:'reg_info_field' %>
          <% else %>
            <%= f.text_field :phone_number, class:'reg_info_field', placeholder:'09012345678'%>
          <% end %>
        </div>
        <label class='label_name'>参加人数</label>
        <span class='mandatory_display'>必須</span>
        <div class='flex mb-1 sm:mb-4'>
          <img src='/assets/application_people_icon.png' class='h-5 w-5 opacity-70 my-auto mr-2'>
          <%= f.number_field :number, class:'reg_info_field', placeholder:'1'%>
        </div>
        <label class='label_name'>問い合わせ</label>
        <span class='any_display'>任意</span>
        <div class='flex mb-1 sm:mb-4'>
          <img src='/assets/question_icon.png' class='h-5 w-5 opacity-70 my-auto mr-2'>
          <%= f.text_area :inquiry, class:'reg_info_field', placeholder:'当日は持ち物とかありますか？'%>
        </div>
        <%= f.submit '応募する', class:'registration_btn' %>
      <% end %>
    </div>
  </div>
</div>