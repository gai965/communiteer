
<div class='w-full bg-gray-100 flex flex-col font-sans'>
  <div class='grid place-items-center mx-2 my-20'>
    <div class='w-11/12 p-12 bg-white rounded-lg shadow-md'>
      <%= link_to(root_path, class:'grid justify-items-end place-items-center') do %>
          <img src='/assets/close_icon.png', class='h-9 w-9 rounded-full hover:bg-gray-200 py-2 px-2'>
      <% end %> 
      <h2 class='text-3xl font-bold text-center text-gray-800'>新規登録</h2>
      <%= form_with model: @group, url: group_registration_path, class: 'mt-10',local: true do |f| %>
        <label class='text-xl text-gray-600 uppercase mr-1'>名前</label>
        <span class='mandatory_display'>必須</span>
        <div class='flex mb-4'>
          <img src='/assets/name_icon.png' class='h-5 w-5 opacity-70 my-auto mr-2'>
          <%= f.text_field :name, class:'reg_info_field', placeholder:'こみゅにてぃーず', autofocus: true %>
        </div>
        <label class='text-xl text-gray-600 uppercase mr-1'>メールアドレス</label>
        <span class='mandatory_display'>必須</span>
        <div class='flex mb-4'>
          <img src='/assets/mail_icon.png' class='h-5 w-5 opacity-70 my-auto mr-2'>
          <%= f.email_field :email, class:'reg_info_field', placeholder:'owned_addres@email.com', autofocus: true %>
        </div>
        <label class='text-xl text-gray-600 uppercase mr-1'>電話番号</label>
        <span class='mandatory_display'>必須</span>
        <div class='flex mb-4'>
          <img src='/assets/phone_icon.png' class='h-5 w-5 opacity-70 my-auto mr-2'>
          <%= f.text_field :phone_number, class:'reg_info_field', placeholder:'0120123456', autofocus: true %>
        </div>
        <label class='text-xl text-gray-600 uppercase mr-1'>住所</label>
        <span class='mandatory_display'>必須</span>
        <div class='flex mb-4'>
          <img src='/assets/address_icon.png' class='h-5 w-5 opacity-70 my-auto mr-2'>
          <%= f.text_field :base_address, class:'reg_info_field', placeholder:'東京都新宿区西新宿2丁目8-1', autofocus: true %>
        </div>
        <label class='text-xl text-gray-600 uppercase mr-1'>ホームページアドレス</label>
        <span class='any_display'>任意</span>
        <div class='flex mb-4'>
          <img src='/assets/url_icon.png' class='h-5 w-5 opacity-70 my-auto mr-2'>
          <%= f.text_field :url, class:'reg_info_field', placeholder:'http://www.communiteer.co.jp/', autofocus: true %>
        </div>
        <label class='text-xl text-gray-600 uppercase mr-1'>パスワード</label>
        <span class='mandatory_display'>必須</span>
        <div class='flex mb-4'>
          <img src='/assets/password_icon.png' class='h-5 w-5 my-auto mr-2'>
          <%= f.password_field :password, class:'reg_info_field', placeholder:'Password00 (6文字以上・半角英数字・大文字含む)', autofocus: true %>
        </div>
        <label class='text-xl text-gray-600 uppercase mr-1'>パスワード確認</label>
        <span class='mandatory_display'>必須</span>
        <div class='flex mb-4'>
          <img src='/assets/password_icon.png' class='h-5 w-5 my-auto mr-2'>
          <%= f.password_field :password_confirmation, class:'reg_info_field', placeholder:'Password00', autofocus: true %>
        </div>
        <%= f.submit '登録', class:'registration_btn' %>
        <%= link_to 'もどる', mains_sign_up_choice_path, class:'return_btn' %>
      <% end %>
      <div class='mt-8 text-sm text-center'>
        <%= link_to 'ゲスト団体でログイン' , root_path, class:'text-blue-500 hover:text-blue-400 hover:underline', method: :post %>
        <div class='mt-4'>
          <span>アカウントをお持ちですか？</span>
          <%= link_to 'ログイン' ,new_group_session_path, class:'text-blue-500 hover:text-blue-400 hover:underline' %>
        </div>            
      </div>
    </div>
  </div>
</div>
