
<div class='h-screen w-full bg-gray-100 flex flex-col font-sans'>
  <div class='grid place-items-center mx-2 my-auto'>
    <div class='w-11/12 md:w-192 p-4 md:p-8 bg-white rounded-lg shadow-md'>
      <%= link_to(root_path, class:'grid justify-items-end place-items-center') do %>
          <%= image_tag 'close_icon.png', class:'close_icon'%>
      <% end %> 
      <h2 class='text-2xl md:text-3xl font-bold text-center text-gray-800'>プロフィール編集</h2>
      <%= form_with model: @user, url: user_registration_path, class: 'mt-10',local: true do |f| %>

        <%= render 'shared/error_messages', model: f.object %>

        <div class='flex justify-start items-center'>
          <div class='label_name'>ニックネーム</div>
        </div>
        <div class='flex mb-4'>
          <%= image_tag'name_icon.png', class:'h-5 w-5 opacity-70 my-auto mr-2'%>
          <%= f.text_field :name, class:'reg_info_field', autofocus: true %>
        </div>
        <div class='flex justify-start items-center'>
          <div class='label_name'>メールアドレス</div>
        </div>
        <div class='flex mb-4'>
          <%= image_tag'mail_icon.png' ,class:'h-5 w-5 opacity-70 my-auto mr-2'%>
          <%= f.email_field :email, class:'reg_info_field', autofocus: true %>
        </div>
        <%= f.submit '変更', id:'register-submit', class:'registration_btn' %>
        <%= link_to 'もどる', page_path(@account.id, type: @account.type), class:'return_btn' %>
      <% end %>
    </div>
  </div>
</div>
